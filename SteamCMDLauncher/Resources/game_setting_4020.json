// Game Settings for Garrys Mod (4020 - Parent 4000)
{
	"setup": {
		"target": "srcds.exe",
		"precommands": "-console -game garrysmod +clientport 27006 +r_hunkalloclightmaps 0 -ip $IP4",
		"server_join_command": "connect $IP;password $P;"
	},
	"#General": {
		"Server_Name": {
			"text": "#Server_Name",
			"type": "input",
			"can_leave_blank": true,
			"placeholder": "Garry's Mod Server",
			"width": 300,
			"command": "hostname $",
			"command_prefix": "+"
		},
		"Password_SVR": {
			"text": "#Server_Pass",
			"type": "pass",
			"tag": "PASS",
			"can_leave_blank": true,
			"hint": "#Server_Pass_Hint",
			"width": 200,
			"command": "sv_password $",
			"command_prefix": "+",
			"alert": "#Server_Pass_Alert",
			"placeholder": "#Server_Pass_PlaceHolder"
		},
		"Auth_Token": {
			"text": "#Server_Auth",
			"type": "pass",
			"can_leave_blank": false,
			"hint": "#Server_Auth_Hint",
			"width": 200,
			"command": "sv_setsteamaccount $",
			"command_prefix": "+",
			"alert": "#Server_Auth_Alert",
			"blank_alert": "#Server_Auth_Empty"
		},
		"Server-Port": {
			"text": "#ServerPort",
			"type": "combo",
			"tag":  "PORT",
			"default": "27015",
			"combo-range": "27010-27030",
			"command": "port $",
			"command_prefix": "-"
		},
		"Server_Vac": {
			"text": "#Is_Vac",
			"type": "check",
			"default": true,
			"hint": "#Is_Vac_Hint",
			"returns": "_, secure",
			"command": "$",
			"command_prefix": "-"
		}
	},
	"#GameSettings": {
		"Max-Players": {
			"text": "#MaxP",
			"type": "combo",
			"default": "2",
			"combo-range": "1-50",
			"command": "maxplayers $",
			"command_prefix": "+"
		},
		"Server_Map": {
			"text": "#Svr-Map",
			"type": "combo",
			"can_leave_blank": false,
			"carry-dir": true,
			"combo-target": "\\garrysmod\\maps;*.bsp",
			"hint": "#Svr-Map-Hint",
			"command": "map $",
			"command_prefix": "+"
		},
		"Server_Gamemode": {
			"text": "#Svr-Gm",
			"type": "combo",
			"can_leave_blank": false,
			"default": "sandbox",
			"carry-dir": true,
			"combo-target": "\\garrysmod\\gamemodes;",
			"hint": "#Svr-Gm-Hint",
			"command": "gamemode $",
			"command_prefix": "+"
		}
	}
}